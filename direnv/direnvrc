eval "$(/opt/homebrew/bin/brew shellenv bash)"
PATH_add $HOME/.local/bin
PATH_add $HOME/.rd/bin
PATH_add $HOME/.krew/bin
export XDG_CONFIG_HOME="$HOME/.config"
export RIPGREP_CONFIG_PATH="$XDG_CONFIG_HOME/ripgreprc"

