#!/usr/bin/env sh
set -xe

# run `apt-get update` iff `apt-get` is a valid command
command -v apt-get && apt-get update && apt-get install -y \
	parallel \
	stow
parallel --verbose stow --adopt {} ::: <<EOF
asdf
autostart
bash
git
go
macos
python
scripts
tabby
vim
vscode
xdg-config
zsh
EOF
~/.config/yadm/bootstrap
